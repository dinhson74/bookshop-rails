<div class='comment mt-1'>
  <%= form_with model: [ @book, @book.comments.build ] do |form| %>
    <p>
      <small><%= form.label :content %></small><br>
      <%= form.text_field :content %>
    </p>
    <p>
      <%= form.submit I18n.t('shop.book.create_comment'), class: 'btn btn-primary' %>
    </p>
  <% end %>
</div>
